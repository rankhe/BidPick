<view class="container">
  <view class="form-group">
    <view class="form-item">
      <text class="label">用户ID</text>
      <input class="input" placeholder="请输入被拉黑用户ID" value="{{form.userId}}" bindinput="handleInput" data-field="userId" type="number" />
    </view>

    <view class="form-item">
      <text class="label">批次ID</text>
      <input class="input" placeholder="可选，留空则拉黑全部" value="{{form.batchId}}" bindinput="handleInput" data-field="batchId" type="number" />
    </view>

    <view class="form-item">
      <text class="label">备注</text>
      <textarea class="textarea" placeholder="拉黑原因" value="{{form.remark}}" bindinput="handleInput" data-field="remark" />
    </view>
  </view>

  <view class="footer">
    <button class="submit-btn" bindtap="submitForm">确认添加</button>
  </view>
</view>
