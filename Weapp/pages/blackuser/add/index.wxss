.container { padding: 20rpx; background: #f5f5f5; min-height: 100vh; }
.form-group { background: #fff; border-radius: 10rpx; padding: 0 20rpx; }
.form-item { display: flex; justify-content: space-between; align-items: center; padding: 30rpx 0; border-bottom: 1rpx solid #eee; }
.label { width: 160rpx; font-size: 30rpx; }
.input { flex: 1; text-align: right; font-size: 30rpx; }
.textarea { width: 100%; height: 150rpx; margin-top: 20rpx; font-size: 30rpx; }
.footer { margin-top: 40rpx; }
.submit-btn { background: #ff4d4f; color: #fff; }
