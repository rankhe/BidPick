.container {
  background: #f5f5f5;
  min-height: 100vh;
  padding: 20rpx;
}
.item {
  background: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
}
.item-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 15rpx;
  border-bottom: 1rpx solid #eee;
  padding-bottom: 15rpx;
}
.item-title {
  font-weight: bold;
}
.price {
  color: #ff4d4f;
  font-weight: bold;
}
.item-content {
  font-size: 26rpx;
  color: #666;
  display: flex;
  flex-direction: column;
  line-height: 1.6;
}
.loading, .no-more {
  text-align: center;
  padding: 20rpx;
  color: #999;
  font-size: 24rpx;
}
