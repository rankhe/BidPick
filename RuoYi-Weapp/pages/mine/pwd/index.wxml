<view class="container">
  <view class="section">
    <form bindsubmit="onSubmit">
      <view class="form-item">
        <text>旧密码</text>
        <input password="true" value="{{oldPassword}}" bindinput="onInput" data-field="oldPassword" />
      </view>
      <view class="form-item">
        <text>新密码</text>
        <input password="true" value="{{newPassword}}" bindinput="onInput" data-field="newPassword" />
      </view>
      <button class="btn-primary" formType="submit" loading="{{loading}}">修改</button>
    </form>
  </view>
</view>
