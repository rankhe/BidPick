.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.section {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.loading {
  text-align: center;
  padding: 40rpx;
  color: #999;
}

.empty {
  text-align: center;
  padding: 60rpx;
  color: #999;
}

/* 报价列表样式 */
.quote-list {
  margin-top: 20rpx;
}

.quote-item {
  margin-bottom: 20rpx;
  border: 1rpx solid #e5e5e5;
  border-radius: 8rpx;
  overflow: hidden;
  cursor: pointer;
  transition: all 0.3s;
}

.quote-item:active {
  background-color: #f5f5f5;
}

.quote-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background-color: #fafafa;
}

.quote-info {
  flex: 1;
}

.product-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-right: 20rpx;
}

.batch-name {
  font-size: 24rpx;
  color: #999;
}

.quote-status {
  font-size: 24rpx;
  padding: 4rpx 16rpx;
  border-radius: 16rpx;
  background-color: #e6f7ff;
  color: #1890ff;
}

.quote-details {
  padding: 20rpx;
}

.detail-item {
  display: flex;
  margin-bottom: 12rpx;
}

.detail-item:last-child {
  margin-bottom: 0;
}

.label {
  width: 120rpx;
  font-size: 28rpx;
  color: #666;
}

.value {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}