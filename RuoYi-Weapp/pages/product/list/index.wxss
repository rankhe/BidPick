.container {
  background: #f5f5f5;
  min-height: 100vh;
}

.search-bar {
  display: flex;
  padding: 20rpx;
  background: #fff;
  align-items: center;
}

.search-input {
  flex: 1;
  background: #f0f0f0;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
}

.add-btn {
  width: 60rpx;
  height: 60rpx;
  background: #36a65b;
  color: #fff;
  text-align: center;
  line-height: 60rpx;
  border-radius: 50%;
  margin-left: 20rpx;
  font-size: 40rpx;
}

.list-container {
  padding: 20rpx;
}

.item {
  background: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
}

.item-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 15rpx;
}

.item-title {
  font-weight: bold;
  font-size: 30rpx;
}

.item-status {
  font-size: 24rpx;
}

.item-content {
  font-size: 26rpx;
  color: #666;
  display: flex;
  flex-direction: column;
  margin-bottom: 15rpx;
}

.item-footer {
  display: flex;
  justify-content: flex-end;
  border-top: 1rpx solid #eee;
  padding-top: 15rpx;
}

.action-btn {
  padding: 10rpx 20rpx;
  border-radius: 6rpx;
  font-size: 24rpx;
}

.delete {
  background: #ff4d4f;
  color: #fff;
}

.loading, .no-more {
  text-align: center;
  padding: 20rpx;
  color: #999;
  font-size: 24rpx;
}
