<view class="container">
  <view class="search-bar">
    <view class="add-btn" bindtap="handleAdd" style="width: 100%; margin: 0; border-radius: 10rpx;">+ 添加黑名单</view>
  </view>

  <view class="list-container">
    <view class="item" wx:for="{{list}}" wx:key="id">
      <view class="item-header">
        <text class="item-title">用户ID: {{item.userId}}</text>
        <view class="action-btn delete" bindtap="handleRemove" data-id="{{item.id}}">移出</view>
      </view>
      <view class="item-content">
        <text>屏蔽批次: {{item.batchId || '所有'}}</text>
        <text>备注: {{item.remark || '-'}}</text>
        <text>添加时间: {{item.createTime}}</text>
      </view>
    </view>
    <view class="loading" wx:if="{{loading}}">加载中...</view>
    <view class="no-more" wx:if="{{!loading && list.length >= total}}">没有更多了</view>
  </view>
</view>
