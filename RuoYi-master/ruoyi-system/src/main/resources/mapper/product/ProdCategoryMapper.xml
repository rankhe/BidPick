<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.product.mapper.ProdCategoryMapper">
    
    <resultMap type="ProdCategory" id="ProdCategoryResult">
        <result property="id"    column="id"    />
        <result property="name"    column="name"    />
        <result property="level"    column="level"    />
        <result property="parentId"    column="parent_id"    />
        <result property="brandId"    column="brand_id"    />
        <result property="brandName"    column="brand_name"    />
        <result property="deptId"    column="dept_id"    />
        <result property="idx"    column="idx"    />
        <result property="status"    column="status"    />
        <result property="updateTime"    column="update_time"    />
        <result property="createTime"    column="create_time"    />
        <result property="creator"    column="creator"    />
        <result property="updator"    column="updator"    />
    </resultMap>

    <sql id="selectProdCategoryVo">
        select pc.id, pc.name, pc.level, pc.parent_id, pc.brand_id, pb.name as brand_name, pc.dept_id, pc.idx, pc.status,
               pc.update_time, pc.create_time, pc.creator, pc.updator
        from prod_category pc
        left join prod_brand pb on pc.brand_id = pb.id
    </sql>

    <select id="selectCategoryAll" resultMap="ProdCategoryResult">
        <include refid="selectProdCategoryVo"/>
    </select>

    <select id="selectProdCategoryList" parameterType="ProdCategory" resultMap="ProdCategoryResult">
        <include refid="selectProdCategoryVo"/>
        <where>  
            <if test="name != null  and name != ''"> and pc.name like concat('%', #{name}, '%')</if>
            <if test="idx != null "> and pc.idx = #{idx}</if>
            <if test="level != null "> and pc.level = #{level}</if>
            <if test="deptId != null "> and pc.dept_id = #{deptId}</if>
            <if test="brandId != null "> and pc.brand_id = #{brandId}</if>
            <if test="parentId != null "> and pc.parent_id = #{parentId}</if>
            <if test="status != null "> and pc.status = #{status}</if>

            <if test="creator != null  and creator != ''"> and pc.creator = #{creator}</if>
            <if test="updator != null  and updator != ''"> and pc.updator = #{updator}</if>
        </where>
    </select>
    
    <select id="selectProdCategoryById" parameterType="Long" resultMap="ProdCategoryResult">
        <include refid="selectProdCategoryVo"/>
        where pc.id = #{id}
    </select>
        
    <insert id="insertProdCategory" parameterType="ProdCategory" useGeneratedKeys="true" keyProperty="id">
        insert into prod_category
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name != null and name != ''">name,</if>
            <if test="idx != null">idx,</if>
            <if test="level != null">level,</if>
            <if test="parentId != null">parent_id,</if>
            <if test="brandId != null">brand_id,</if>
            <if test="deptId != null">dept_id,</if>
            <if test="status != null">status,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="createTime != null">create_time,</if>
            <if test="creator != null">creator,</if>
            <if test="updator != null">updator,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="name != null and name != ''">#{name},</if>
            <if test="idx != null">#{idx},</if>
            <if test="level != null">#{level},</if>
            <if test="parentId != null">#{parentId},</if>
            <if test="brandId != null">#{brandId},</if>
            <if test="deptId != null">#{deptId},</if>
            <if test="status != null">#{status},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="creator != null">#{creator},</if>
            <if test="updator != null">#{updator},</if>
         </trim>
    </insert>

    <update id="updateProdCategory" parameterType="ProdCategory">
        update prod_category
        <trim prefix="SET" suffixOverrides=",">
            <if test="name != null and name != ''">name = #{name},</if>
            <if test="idx != null">idx = #{idx},</if>
            <if test="level != null">level = #{level},</if>
            <if test="parentId != null">parent_id = #{parentId},</if>
            <if test="brandId != null">brand_id = #{brandId},</if>
            <if test="deptId != null">dept_id = #{deptId},</if>
            <if test="status != null">status = #{status},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="creator != null">creator = #{creator},</if>
            <if test="updator != null">updator = #{updator},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteProdCategoryById" parameterType="Long">
        delete from prod_category where id = #{id}
    </delete>

    <delete id="deleteProdCategoryByIds" parameterType="String">
        delete from prod_category where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>
