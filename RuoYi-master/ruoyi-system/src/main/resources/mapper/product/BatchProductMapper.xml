<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.product.mapper.BatchProductMapper">

    <resultMap type="BatchProduct" id="BatchProductResult">
        <result property="id" column="id"/>
        <result property="batchId" column="batch_id"/>
        <result property="prodId" column="prod_id"/>
        <result property="publishCount" column="publish_count"/>
        <result property="lockedCount" column="locked_count"/>
        <result property="idx" column="idx"/>
        <result property="status" column="status"/>
        <result property="updateTime" column="update_time"/>
        <result property="createTime" column="create_time"/>
    </resultMap>

    <sql id="selectBatchProductVo">
        select id, batch_id, prod_id, publish_count, locked_count, idx, status, update_time, create_time from batch_product
    </sql>

    <select id="selectBatchProductById" parameterType="Long" resultMap="BatchProductResult">
        <include refid="selectBatchProductVo"/> where id=#{id}
    </select>

    <select id="selectBatchProductList" parameterType="BatchProduct" resultMap="BatchProductResult">
        <include refid="selectBatchProductVo"/>
        <where>
            <if test="batchId != null"> and batch_id=#{batchId}</if>
            <if test="prodId != null"> and prod_id=#{prodId}</if>
            <if test="status != null"> and status=#{status}</if>
        </where>
    </select>

    <insert id="insertBatchProduct" parameterType="BatchProduct" useGeneratedKeys="true" keyProperty="id">
        insert into batch_product
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="batchId != null">batch_id,</if>
            <if test="prodId != null">prod_id,</if>
            <if test="publishCount != null">publish_count,</if>
            <if test="lockedCount != null">locked_count,</if>
            <if test="idx != null">idx,</if>
            <if test="status != null">status,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="createTime != null">create_time,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="batchId != null">#{batchId},</if>
            <if test="prodId != null">#{prodId},</if>
            <if test="publishCount != null">#{publishCount},</if>
            <if test="lockedCount != null">#{lockedCount},</if>
            <if test="idx != null">#{idx},</if>
            <if test="status != null">#{status},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="createTime != null">#{createTime},</if>
        </trim>
    </insert>

    <update id="updateBatchProduct" parameterType="BatchProduct">
        update batch_product
        <trim prefix="SET" suffixOverrides=",">
            <if test="batchId != null">batch_id=#{batchId},</if>
            <if test="prodId != null">prod_id=#{prodId},</if>
            <if test="publishCount != null">publish_count=#{publishCount},</if>
            <if test="lockedCount != null">locked_count=#{lockedCount},</if>
            <if test="idx != null">idx=#{idx},</if>
            <if test="status != null">status=#{status},</if>
            <if test="updateTime != null">update_time=#{updateTime},</if>
            <if test="createTime != null">create_time=#{createTime},</if>
        </trim>
        where id=#{id}
    </update>

    <delete id="deleteBatchProductById" parameterType="Long">delete from batch_product where id=#{id}</delete>

    <select id="selectByBatchAndProd" resultMap="BatchProductResult">
        <include refid="selectBatchProductVo"/> where batch_id=#{batchId} and prod_id=#{prodId} limit 1
    </select>

    <update id="increaseLockedCount">
        update batch_product set locked_count = locked_count + #{delta} where id = #{id}
    </update>

</mapper>
