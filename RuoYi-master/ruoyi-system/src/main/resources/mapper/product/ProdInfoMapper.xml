<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.product.mapper.ProdInfoMapper">
    
    <resultMap type="ProdInfo" id="ProdInfoResult">
        <result property="id"    column="id"    />
        <result property="name"    column="name"    />
        <result property="brandName"    column="brand_name"    />
        <result property="categoryId"    column="category_id"    />
        <result property="categoryName"    column="category_name"    />
        <result property="deptId"    column="dept_id"    />
        <result property="count"    column="count"    />
        <result property="idx"    column="idx"    />
        <result property="status"    column="status"    />
        <result property="updateTime"    column="update_time"    />
        <result property="createTime"    column="create_time"    />
        <result property="createBy"    column="create_by"    />
        <result property="updateBy"    column="update_by"    />
    </resultMap>

    <sql id="selectProdInfoVo">
        select id, name,brand_name, category_id,category_name, dept_id, count,idx, status, update_time, create_time,
               create_by, update_by from prod_info pi
    </sql>

    <select id="selectProdInfoList" parameterType="ProdInfo" resultMap="ProdInfoResult">
        <include refid="selectProdInfoVo"/>
        <where>  
            <if test="name != null  and name != ''"> and pi.name like concat('%', #{name}, '%')</if>
            <if test="brandName != null  and brandName != ''"> and pi.brand_name like concat('%', #{brandName}, '%')</if>
            <if test="categoryId != null "> and pi.category_id = #{categoryId}</if>
            <if test="categoryName != null and categoryName != ''"> and pi.category_name = #{categoryName}</if>
            <if test="deptId != null "> and pi.dept_id = #{deptId}</if>
            <if test="count != null "> and pi.count = #{count}</if>
            <if test="idx != null "> and pi.idx = #{idx}</if>
            <if test="status != null "> and pi.status = #{status}</if>
        </where>
    </select>
    
    <select id="selectProdInfoById" parameterType="Long" resultMap="ProdInfoResult">
        <include refid="selectProdInfoVo"/>
        where pi.id = #{id}
    </select>
        
    <insert id="insertProdInfo" parameterType="ProdInfo" useGeneratedKeys="true" keyProperty="id">
        insert into prod_info
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name != null and name != ''">name,</if>
            <if test="brandName != null and brandName != ''">brand_name,</if>
            <if test="categoryId != null">category_id,</if>
            <if test="categoryName != null and categoryName != ''">category_name,</if>
            <if test="deptId != null">dept_id,</if>
            <if test="count != null">count,</if>
            <if test="idx != null">idx,</if>
            <if test="status != null">status,</if>
            <if test="createBy != null and createBy != ''">create_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="createTime != null">create_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="name != null and name != ''">#{name},</if>
            <if test="brandName != null and brandName != ''">#{brandName},</if>
            <if test="categoryId != null">#{categoryId},</if>
            <if test="categoryName != null and categoryName != ''">#{categoryName},</if>
            <if test="deptId != null">#{deptId},</if>
            <if test="count != null">#{count},</if>
            <if test="idx != null">#{idx},</if>
            <if test="status != null">#{status},</if>
            <if test="createBy != null and createBy != ''">#{createBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="createTime != null">#{createTime},</if>
         </trim>
    </insert>

    <update id="updateProdInfo" parameterType="ProdInfo">
        update prod_info
        <trim prefix="SET" suffixOverrides=",">
            <if test="name != null and name != ''">name = #{name},</if>
            <if test="brandName != null and brandName != ''">brand_name = #{brandName},</if>
            <if test="categoryId != null">category_id = #{categoryId},</if>
            <if test="categoryName != null and categoryName != ''">category_name = #{categoryName},</if>
            <if test="deptId != null">dept_id = #{deptId},</if>
            <if test="count != null">count = #{count},</if>
            <if test="idx != null">idx = #{idx},</if>
            <if test="status != null">status = #{status},</if>
            <if test="updateBy != null and updateBy != ''">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteProdInfoById" parameterType="Long">
        delete from prod_info where id = #{id}
    </delete>

    <delete id="deleteProdInfoByIds" parameterType="String">
        delete from prod_info where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    

</mapper>
